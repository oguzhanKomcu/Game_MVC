@model Game_MVC.Models.Dto.CategoryUpdateDTO
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container mt-2">
    <div class="row">
        <div class="col-sm-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Category Update</h3>
                </div>
                <form method="post" action="/Category/Update">
                    <!--Hidden Input: Client bu input alanlarını göremez. Kendimiz için id'yi burada depoladık. Form submit olduğunda Update actin methoduna giderken bu Id bilgisinide böylelikle taşıyacak. Bunu yazmasaydık Id bilgisi kaybolacaktı.'-->
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="card-body">
                        <div class="form-group">
                            <label>Category_Name</label>
                            <input type="text" name="Category_Name" value="@Model.Name" class="form-control" placeholder="Name">
                        </div>
                      
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

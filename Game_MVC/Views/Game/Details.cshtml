@model Game_MVC.Models.Vms.GameDetailsVM
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container mt-2">
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@Model.Name Details</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Tiles</th>
                                <th>Information</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Id</td>
                                <td>@Model.Id</td>
                            </tr>
                            <tr>
                                <td>Name</td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td>Platform</td>
                                <td>@Model.Platform</td>
                            </tr>
                            <tr>
                                <td>Dimension</td>
                                <td>@Model.Dimension</td>
                            </tr>
                            <tr>
                                <td>Release_Date</td>
                                <td>@Model.Release_Date</td>
                            </tr>
                            <tr>
                                <td>Language</td>
                                <td>@Model.Language</td>
                            </tr>
                            <tr>
                                <td>Developer_Company</td>
                                <td>@Model.Developer_Company</td>
                            </tr>
                           
                            <tr>
                                <td>Status</td>
                                <td>@Model.Status</td>
                            </tr>
                            <tr>
                                <td>CreateDate</td>
                                <td>@Model.CreateDate</td>
                            </tr>
                            <tr>
                                <td>UpdateDate</td>
                                <td>@Model.UpdateDate</td>
                            </tr>
                            <tr>
                                <td>DeleteDate</td>
                                <td>@Model.DeleteDate</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
